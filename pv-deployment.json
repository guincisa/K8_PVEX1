{
   "apiVersion": "apps/v1",
   "kind": "Deployment",
   "metadata": {
      "name": "pv-deployment",
      "labels": {
         "app": "nginx"
      }
   },
   "spec": {
      "replicas": 6,
      "selector": {
         "matchLabels": {
            "app": "nginx"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "app": "nginx"
            }
         },
         "spec": {
            "volumes": [
               {
                  "name": "task-pv-storage2",
                  "persistentVolumeClaim": {
                     "claimName": "task-pv-claim2"
                  }
               },
               {
                  "name": "task-pv-storage",
                  "persistentVolumeClaim": {
                     "claimName": "task-pv-claim"
                  }
               }
            ],
            "containers": [
               {
                  "name": "task-pv-container",
                  "image": "nginx",
                  "ports": [
                     {
                        "containerPort": 80,
                        "name": "http-server"
                     }
                                       ],
                  "volumeMounts": [
                     {
                        "mountPath": "/usr/share/nginx/html",
                        "name": "task-pv-storage"
                     },
                     {
                        "mountPath": "/tmp",
                        "name": "task-pv-storage2"
                     }
                  ]
               }
            ]
         }
      }
   }
}

